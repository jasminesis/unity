<h1>Welcome to Unity!</h1>

<div class="d-flex flex-wrap my-4 ">
	<div class="myCard">
		<div class="face face1">
			<div class="myContent">
				<h4>Add your favourite games!</h4>
				<img src="<%= image_url 'lego.png' %>"
					style="width:100%; border-radius: 5px; opacity: 0.9; margin-top: 1.5rem;" />
			</div>
		</div>
		<div class="face face2">
			<h2>Games</h2>
		</div>
	</div>

	<div class="myCard">
		<div class="face face1">
			<div class="myContent">
				<h4>Find your friends online</h4>
				<img src="<%= image_url 'fogg-welcome-2.png' %>"
					style="width:100%; border-radius: 5px; opacity: 0.9; margin-top: 1.5rem;" />

			</div>
		</div>
		<div class="face face2">
			<h2>Friends</h2>
		</div>
	</div>

	<div class="myCard">
		<div class="face face1">
			<div class="myContent">
				<h4>Schedule events together</h4>
				<img src="<%= image_url 'workflow.png' %>"
					style="width:100%; border-radius: 5px; opacity: 0.9;margin-top: 1.5rem;" />
			</div>
		</div>
		<div class="face face2">
			<h2>Schedules</h2>
		</div>
	</div>
</div>

<div class="d-flex justify-content-between register">

	<%= link_to new_user_registration_path,{:class => "d-inline-block my-4 mx-auto", :id => "loginBubble"} do %>
		<div class="bubbles">
			<span></span>
			<span></span>
			<span></span>
			<span></span>
			<div class="bubblesContent">
				<h2>Sign up</h2>
			</div>
		</div>
	<% end %>


	<%= link_to new_user_session_path,{:class => "d-inline-block my-4 m-auto", :id => "loginBubble"} do %>
		<div class="bubbles2">
			<span></span>
			<span></span>
			<span></span>
			<span></span>
			<div class="bubblesContent2">
				<h2>Log in</h2>
			</div>
		</div>
	<% end %>
</div>