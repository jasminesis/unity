
<div class="col-12">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="row">
<div class="col-6 text-left" style="margin: 0 auto;">

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, hide_label: true, autocomplete: "email" %>
  </div>

  <div class="field">
  	<%= f.label :username %>
    <%= f.text_field :username, autofocus: true, hide_label: true, autocomplete: "username" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, hide_label: true, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, hide_label: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, hide_label: true, autocomplete: "current-password" %>
  </div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


</div></div></div>