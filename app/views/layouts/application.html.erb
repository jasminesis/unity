<!DOCTYPE html>
<html>

<head>
	<title>Unity</title>
	<%= favicon_link_tag 'pyramid.ico' %>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
	<script src='https://kit.fontawesome.com/a076d05399.js'></script>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>

<body>

	<div class="fun-hover">


		<nav class="navbar navbar-expand-lg">
			<div class=" d-flex  align-items-center">
				<button class="navbar-toggler btn btn-outline-danger mx-3" type="button" data-toggle="collapse" data-target="#navbarNav"
					aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon "><i class="fas fa-bars" style="color:#fff; font-size:28px;"></i></span>
				</button>
				<a class="navbar-brand" href="/">Unity</a>
			</div>


			<div class="collapse navbar-collapse " id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<%= link_to '<i class="fas fa-gamepad"></i> Games'.html_safe, games_path,{:class => "nav-link"} %>
					</li>
					<% if user_signed_in?%>
					<li class="nav-item">
						<%= link_to '<i class="fas fa-user-friends"></i> Find friends'.html_safe, users_path,{:class => "nav-link"} %>
					</li>
					<li class="nav-item">
						<%= link_to '<i class="far fa-calendar-alt"></i> Schedules'.html_safe, schedules_path,{:class => "nav-link"} %>
					</li>
					<li class="nav-item">
						<%= link_to '<i class="far fa-calendar"></i> Free Times'.html_safe, freetimes_path,{:class => "nav-link"} %>
					</li>
					<% end %>
				</ul>


			</div>


			<ul class="navbar-nav">
					<% if user_signed_in?%>
					<%= link_to '<i class="fas fa-user-circle"></i> Profile'.html_safe, edit_user_registration_path,{:class => "nav-link"} %>

					<%= link_to '<i class="fas fa-sign-out-alt"></i> Log out'.html_safe, destroy_user_session_url, :class => "nav-link", method: :delete  %>

					<% else %>
					<%= link_to 'Log in', new_user_session_url,{:class => "nav-link"}  %>
					<% end %>
				</ul>


		</nav>
	</div>
	<div class="container text-center">
		<%= yield %>
	</div>
</body>

</html>