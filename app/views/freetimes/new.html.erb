<div class="freetimes">
	<h1 class="display-4">Choose free time slots</h1>

	<% if @datetime.to_date == DateTime.now.to_date %>

	<% else %>
	<a href="?newdate=<%= @datetime.yesterday.beginning_of_day() %>"><span>&#x2190;</span></a>
	<% end %>
	<h3 class="m-3">
		<%= @datetime.strftime("%A, %d %B %Y") %>
	</h3>

	<a href="?newdate=<%= @datetime.tomorrow.beginning_of_day() %>"><span>&#x2192;</span></a>

	<div class="col-10">

		<div class="form-check center">
			<%= form_with scope: :freetime, url: freetimes_path, local: true do |f| %>
			<% require 'time' %>

			<% hour_step = (1.to_f/24) %>

			<% date_time = @datetime.at_beginning_of_hour() %>
			<% date_time_limit = @datetime.end_of_day() %>

			<% date_time.step(date_time_limit,hour_step).each do |e| %>
			<p>
				<%= check_box(:freetime, :time, {:multiple => true, :class => "mr-3"}, e, nil) %>
				<%= f.label(e.end_of_hour().strftime("%I:00 %p - %I:%M %p ")) %>
			</p>
			<% end %>
		</div>


	</div>
	<div class="form-group">
		<%= f.submit({:class => "btn btn-danger"}) %>
	</div>
	<% end %>
</div>