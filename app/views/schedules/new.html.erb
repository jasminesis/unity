<h1 class="display-4">New Event</h1>
<div class="col-8" style="margin:0 auto">


	<%= form_with scope: :schedule, url: schedules_path, local: true do |form| %>

	<div class="form-group">
		<%= form.label :event %><br>
		<%= form.text_field(:event, {:class => "form-control"}) %>
	</div>


	<!-- <% if false %>
	<div class="form-group">
		<%= form.label :user_id %><br>
		<%= form.collection_select(:friend_id, @friends, :id, :event, {:include_blank => 'Select friend...'}, {:class => "custom-select"}) %>
	</div>
	<% end %> -->

	<div class="form-group">
		<%= form.label :start_time %><br>
		<%= form.datetime_field(:start_time, {:class =>  "form-control"}) %>
	</div>

	<div class="form-group">
		<%= form.collection_check_boxes(:user_ids, @friends, :id, :username) %>

	</div>


	<div class="form-group">
		<%= form.submit({:class => "btn btn-primary"}) %>
	</div>
	<% end %>
</div>