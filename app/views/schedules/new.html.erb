<h1 class="display-4">New Event</h1>
<div class="col-8" style="margin:0 auto">


	<%= form_with scope: :schedule, url: schedules_path, local: true do |form| %>

	<div class="form-group">
		<%= form.label :event %>
		<br />
		<%= form.text_field(:event, {:class => "form-control", :placeholder => "Game name (e.g. Untitled Goose Game)"}) %>

		<% if show_errors(@schedule, :event) %>

		<div class="error alert-danger text-left">
		    <ul>
			<% @schedule.errors.full_messages.each do |msg| %>
			  <li><%= msg %></li>
			<% end %>
		  </ul>
		</div>

	  <% end %>

	</div>


	<div class="form-group">
		<%= form.label :start_time %><br>
		<%= form.datetime_field(:start_time, {:class =>  "form-control", :value => @datetime.strftime("%Y-%m-%dT%H:00")}) %>
	</div>


	<div class="form-group">
		<%= form.label :friends %><br>
		<div class="d-flex justify-content-around">
			<% @friends.each do|friend| %>
			<p>
				<%= check_box(:schedule, :user_ids,{:multiple => true},friend.id,nil ) %>
				<%= form.label(friend.username) %>
			</p>
			<% end %>

		</div>
	</div>



	<div class="form-group">
		<%= form.submit({:class => "btn btn-primary"}) %>
	</div>


	<% end %>
</div>